<div class="user-form">
<h1>Login</h1>
<%= form_for @user_session, :url => { :action => "create" } do |f| %>

  <% if @user_session.errors.full_messages[0] %>
    <ul class="alert-message block-message error">
      <% @user_session.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <div class = "error">
  </div>
  <div class="clearfix">
    <%= f.label :email %>
    <div class="input">
      <%= f.text_field :email %>
    </div>
  </div>
  <br />
  <div class="clearfix">
    <%= f.label :password %>
    <div class="input">
      <%= f.password_field :password %>
    </div>
  </div>
  <br />
  <div class="actions">
  <%= f.submit "Login", :class=>"btn primary" %>
  </div>
  </div>
<% end %>
